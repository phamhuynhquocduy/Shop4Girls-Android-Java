<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.OrderSuccessActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleTextColor="@color/colorWhite"
        app:title=""
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt hàng thành công"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190sp"
        android:layout_height="190sp"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        app:srcCompat="@drawable/success" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt hàng thành công!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cám ơn bạn đã chọn Shop4Girls!"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đơn hàng của bạn đang được xử lý và sẽ vận chuyển đến bạn."
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10sp">
    </TextView>

    <Button
        android:layout_marginTop="10sp"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="Tiếp tục mua sắm"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/custom_button">
    </Button>

</LinearLayout>
